<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/samplingHead"
        android:background="@color/notepad_paper"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        android:textColor="#F000"
        android:layout_marginLeft="@dimen/notepad_margin"
        android:visibility="visible"
        android:text="Head"
        />
    <ImageButton
        android:id="@+id/samplingRecording"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/notepad_margin"
        android:scaleType="fitXY"
        android:visibility="visible"
        android:src="@mipmap/recording"
        android:background="@drawable/roundcorner"
        />

</RelativeLayout>